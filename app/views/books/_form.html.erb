      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :author %><br>
    <%= f.select :author_id, Author.all.collect { |author| [author.to_s, author.id] } %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.select :color_id, Color.all.collect { |color| [color.name, color.id]} %>
  </div>
  <div class="field">
    <%= f.label :isbn %><br>
    <%= f.text_field :isbn %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.select :genre_id, Genre.all.collect { |genre| [genre.name, genre.id] } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
